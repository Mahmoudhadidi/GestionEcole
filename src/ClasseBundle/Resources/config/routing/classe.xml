<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="classe_index" path="/" methods="GET">
        <default key="_controller">ClasseBundle:Classe:index</default>
    </route>

    <route id="classe_show" path="/{idClasse}/show" methods="GET">
        <default key="_controller">ClasseBundle:Classe:show</default>
    </route>

    <route id="classe_new" path="/new" methods="GET|POST">
        <default key="_controller">ClasseBundle:Classe:new</default>
    </route>

    <route id="classe_edit" path="/{idClasse}/edit" methods="GET|POST">
        <default key="_controller">ClasseBundle:Classe:edit</default>
    </route>

    <route id="classe_delete" path="/{idClasse}/delete" methods="DELETE">
        <default key="_controller">ClasseBundle:Classe:delete</default>
    </route>
    <route id="classe_acc" path="/acc" methods="GET">
        <default key="_controller">ClasseBundle:Classe:acc</default>
    </route>

</routes>
