{% extends 'base.html.twig' %}


{% block body %}




    <div class="row wrapper border-bottom white-bg page-heading">
        <div class="col-sm-4">
            <h2>Réclamations</h2>
            <ol class="breadcrumb">


            </ol>

                <div class="modal inmodal" id="myModal" tabindex="-1" role="dialog" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content animated bounceInRight">
                            <div class="modal-header">
                                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                                <i class="fa fa-laptop modal-icon"></i>
                                <h4 class="modal-title">Votre réclamation </h4>
                                <small class="font-bold">merci de remplir les champs ci_dessous.</small>
                            </div>
                            <div class="modal-body">
                                {{ form_start(form) }}

                                <div class="cp-field" >
                                    Sujet: {{ form_widget(form.sujet, {'attr' :{'class' :'form-control' , 'placeholder':"Saisir ici..."} }) }}

                                   Description: {{ form_widget(form.description, {'attr' :{'class' :'form-control' , 'placeholder':"Saisir ici..."} }) }}
                                </div>

                               {# <div class="form-group"><label>Sample Input</label> <input type="email" placeholder="Enter your email" class="form-control"></div>
                            </div>#}
                            <div class="modal-footer">
                                <button type="button" class="btn btn-white" data-dismiss="modal">fermer</button>
                                <input type="submit" value="Envoyer" class="btn btn-primary" />
                                {{ form_end(form) }}

                            </div>
                        </div>
                    </div>
                </div>
               {# {{ form_start(form) }}
                {{ form_widget(form) }}
                <input type="submit" value="Create" />
                {{ form_end(form) }}
                #}


        </div>
    </div>
            </div>






    <div class="wrapper wrapper-content  animated fadeInRight">
        <div class="row">
            <div class="col-lg-12">
                <div class="ibox">
                    <div class="ibox-title">
                        <h5>liste des réclamations</h5>
                        <div class="ibox-tools">

                            <a class="btn btn-primary btn-xs" data-toggle="modal" data-target="#myModal">Ajouter réclamation</a>
                        </div>
                    </div>
                    <div class="ibox-content">

                        <div class="m-b-lg">

                            <div class="input-group">
                                <input type="text" placeholder="Rechercher réclamation par sujet..." class=" form-control">
                                <span class="input-group-btn">
                                        <button type="button" class="btn btn-white"> Rechercher</button>
                                    </span>
                            </div>
                            <div class="m-t-md">

                                <div class="pull-right">
                                    <button type="button" class="btn btn-sm btn-white"> <i class="fa fa-comments"></i> </button>
                                    <button type="button" class="btn btn-sm btn-white"> <i class="fa fa-user"></i> </button>
                                    <button type="button" class="btn btn-sm btn-white"> <i class="fa fa-list"></i> </button>
                                    <button type="button" class="btn btn-sm btn-white"> <i class="fa fa-pencil"></i> </button>
                                    <button type="button" class="btn btn-sm btn-white"> <i class="fa fa-print"></i> </button>
                                    <button type="button" class="btn btn-sm btn-white"> <i class="fa fa-cogs"></i> </button>
                                </div>


                                    {% for count in countReclamation %}
                                <strong>  vous avez {{ count[1]  }} reclamations.</strong>
                                    {% endfor %}


                            </div>

                        </div>

                        <div class="table-responsive">
                            <table class="table table-hover issue-tracker">

                                <tbody>{% for reclamation in reclamations %}

                                    <tr>
                                        <td >
                                            <a href="#">
                                                {% if (reclamation.etat=="traitée")  %}
                                                    <span class="label label-primary">  {{ reclamation.etat }}</span>
                                                {% endif %}
                                                {% if (reclamation.etat=="non traité")  %}
                                                    <span class="label label-warning">  {{ reclamation.etat }}</span>
                                                {% endif %}

                                            </a>
                                        <td >



                                             <h5>Sujet:</h5>


                                            <small>
                                                {{ reclamation.sujet }}
                                            </small>
                                        </td>


                                        </td>
                                        <td class="issue-info">


                                            <a href="#">
                                                Description
                                            </a>

                                            <small>
                                                {{ reclamation.description }}
                                            </small>
                                        </td>
                                        <td class="issue-info">


                                            <a href="#">
                                                Reponse
                                            </a>

                                            <small>
                                                {{ reclamation.reponse }}
                                            </small>
                                        </td>

                                        <td>
                                            {{ reclamation.dateEnv}} am
                                        </td>

                                        <td class="text-right">
                                            <button class="btn btn-white btn-xs">   {{ reclamation.id }}</button>

                                        </td>
                                    </tr>
                                </tbody>
                                {% endfor %}







                                                           </table>
                        </div>
                    </div>

                </div>

        </div>
        </div>
    </div>

{% endblock %}