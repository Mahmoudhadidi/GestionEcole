{% extends 'base.html.twig' %}

{% block body %}

<div id="wrapper">
    <div class="row wrapper border-bottom white-bg page-heading">
        <div class="col-sm-4">
            <h2>Réclamations</h2>
            <ol class="breadcrumb">
                <li>
                    <a href={{ path('homepage') }}>Home</a>
                </li>
                <li class="active">
                    <strong>liste des réclamations</strong>
                </li>
            </ol>
        </div>

        <div class="row">
            <div class="col-lg-12">
                <div class="wrapper wrapper-content animated fadeInRight">
                    <div class="ibox-content forum-post-container">
                        <div class="forum-post-info">
                            <h4><span class="text-navy"><i class="fa fa-globe"></i> General réclamations</span> </h4>
                        </div>
                        <div class="form-group">
    <label>Réponse</label>
                            {{ form_start(form) }}
                            <div class="cp-field">
                                {{ form_widget(form.reponse) }}
                            </div>
                            <div class="cp-field">
                                {{ form_widget(form.repondre) }}
                            </div>
                            {{ form_end(form) }}


</div>
{% endblock %}