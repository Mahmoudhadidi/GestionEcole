{% extends 'adminnote.html.twig' %}

{% block body %}


    <br>

    <a href="{{ path('matiere_index') }}"><i class="fa fa-arrow-circle-o-left"></i> retour</a>
    <br>
    <br>



    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Modifier salle <small></small></h5>
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>

                        <a class="close-link">
                            <i class="fa fa-times"></i>
                        </a>
                    </div>
                </div>
                <div class="ibox-content">
                    <i class="form-horizontal">
                        {{ form_start(edit_form) }}
                        <div class="form-group"><label class="col-sm-2 control-label">Numero salle</label>

                            <div class="col-sm-10">


                                {{ form_widget(edit_form.numSalle, { 'attr': {'class': 'form-control '} }) }}
                                {{ form_errors(edit_form.numSalle) }}

                            </div>
                        </div>
                        <div class="hr-line-dashed"></div>
                        <div class="form-group"><label class="col-sm-2 control-label">Nom salle</label>
                            <div class="col-sm-10">
                                {{ form_widget(edit_form.nomSalle, { 'attr': {'class': 'form-control '} }) }}
                                {{ form_errors(edit_form.nomSalle) }}


                            </div>
                        </div>
                        <div class="hr-line-dashed"></div>
                        <div class="form-group"><label class="col-sm-2 control-label">bloc</label>

                            <div class="col-sm-10">
                                {{ form_widget(edit_form.bloc, { 'attr': {'class': 'form-control ' } }) }}
                                {{ form_errors(edit_form.bloc) }}


                            </div>
                        </div>

                        <div class="hr-line-dashed"></div>
                        <div class="form-group">

                            <center>   <input class="btn btn-white" type="reset" value="Annuler">
                                <input class="btn btn-primary" type="submit" value="Modifier">
                            </center>
                        </div>
                        {{ form_end(edit_form) }}
                    </i>
                    </i>
                </div>
            </div>
        </div>

    </div>









{% endblock %}
