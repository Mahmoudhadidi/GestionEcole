{% extends 'base.html.twig' %}

{% block body %}
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script>
        $(document).ready(function(){
            $("#myInput").on("keyup", function() {
                var value = $(this).val().toLowerCase();
                $("#myTable tr").filter(function() {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });
        });
    </script>
    <br>

    <ul>
        <li>
       <h2>  <b><a class="btn btn-w-m btn-primary" href="{{ path('note_new') }}">Ajouter une Note</a></b> </h2>
        </li>
    </ul>
    <ul>
    <li>
        <h2>  <b><a class="btn btn-w-m btn-primary" href="{{ path('note_pdf') }}">PDF</a></b> </h2>
    </li>
</ul>


        <input id="myInput" type="text" name="rechercher" placeholder="rechercher ..."> <br>





    <br> <br>

    <table class="table table-striped table-bordered table-hover dataTables-example">
        <thead>
            <tr>
                <th>Idnote</th>
                <th>Notecc</th>
                <th>Noteds</th>
                <th>Noteexamun</th>
                <th>Moyenne</th>
                <th>Net</th>
                <th>Cin</th>
                <th>Nommatier</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody id="myTable">
        {% for note in result %}
            <tr>
                <td><a href="{{ path('note_show', { 'idNote': note.idNote }) }}">{{ note.idNote }}</a></td>
                <td>{{ note.noteCc }}</td>
                <td>{{ note.noteDs }}</td>
                <td>{{ note.noteExamun }}</td>
                <td>{{ note.moyenne }}</td>
                <td>{{ note.net }}</td>
                <td>{{ note.cin }}</td>
                <td>{{ note.nomMatier }}</td>
                <td>
                    <ul>
                        <li>
                            <a class="btn btn-w-m btn-info" href="{{ path('note_show', { 'idNote': note.idNote }) }}">Voir</a>
                        </li>
                        <li>
                            <a class="btn btn-w-m btn-default" href="{{ path('note_edit', { 'idNote': note.idNote }) }}">Modifier</a>
                        </li>
                    </ul>
                    
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {# display navigation #}
    <div class="navigation text-center">
        <h3>  <b> Preview {{ knp_pagination_render(result) }}  Next</b> </h3>
    </div>



{% endblock %}
