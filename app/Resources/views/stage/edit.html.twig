{% adminnote 'base.html.twig' %}

{% block body %}
    <br>

    <a href="{{ path('stage_index') }}"><i class="fa fa-arrow-circle-o-left"></i> retour</a>
    <br>
<div class="row">
    <div class="col-lg-12">
        <div class="ibox float-e-margins">

            <div class="ibox-content">
                <i class="form-horizontal">
                    {{ form_start(edit_form) }}
                    <div class="form-group"><label class="col-sm-2 control-label">Titre</label>

                        <div class="col-sm-10">


                            {{ form_widget(edit_form.titre, { 'attr': {'class': 'form-control ', 'placeholder': "Titre stage" } }) }}
                            {{ form_errors(edit_form.titre) }}

                        </div>
                    </div>
                    <div class="hr-line-dashed"></div>
                    <div class="form-group"><label class="col-sm-2 control-label">Description </label>
                        <div class="col-sm-10">
                            {{ form_widget(edit_form.description, { 'attr': {'class': 'form-control ', 'placeholder': "Description stage" } }) }}
                            {{ form_errors(edit_form.description) }}


                        </div>
                    </div>
                    <div class="hr-line-dashed"></div>
                    <div class="form-group"><label class="col-sm-2 control-label">Type</label>

                        <div class="col-sm-10">
                            {{ form_widget(edit_form.type, { 'attr': {'class': 'form-control ', 'placeholder': "Type stage" } }) }}
                            {{ form_errors(edit_form.type) }}


                        </div>
                    </div>

                    <div class="hr-line-dashed"></div>
                    <div class="form-group"><label class="col-sm-2 control-label">Date debut</label>

                        <div class="col-sm-10">


                            {{ form_widget(edit_form.datedebutS, { 'attr': {'class': 'form-control ' } }) }}
                            {{ form_errors(edit_form.datedebutS) }}

                        </div>
                    </div>
                    <div class="hr-line-dashed"></div>
                    <div class="form-group"><label class="col-sm-2 control-label">Datefin </label>
                        <div class="col-sm-10">
                            {{ form_widget(edit_form.datefinS, { 'attr': {'class': 'form-control ' } }) }}
                            {{ form_errors(edit_form.datefinS) }}


                        </div>
                    </div>
                    <div class="hr-line-dashed"></div>
                    <div class="form-group"><label class="col-sm-2 control-label">Capacite maximale</label>

                        <div class="col-sm-10">
                            {{ form_widget(edit_form.capaciteMax, { 'attr': {'class': 'form-control ', 'placeholder': "Capacite maximale" } }) }}
                            {{ form_errors(edit_form.capaciteMax) }}


                        </div>
                    </div>

                    <div class="hr-line-dashed"></div>

                    <div class="form-group">

                        <center>

                            <input class="btn btn-white" type="reset" value="Annuler">

                            <input class="btn btn-primary" type="submit" value="Modifier">

                        </center>
                    </div>
                    {{ form_end(edit_form) }}
                </i></div>
        </div>
    </div>
</div>

{% endblock %}
{% block js %}
    <script>
        $(document).ready(function () {

            $('#misstitre').hide();
            $('#stagebundle_Stage_titre').keyup(function () {


                $.ajax({

                    success: function () {
                        var re = /^[a-z \t à . ? ! ) ( @ # < > : = + $ * ô é è ù ,A-Z 0-9]{3,}$/i;
                        var x = $('#Stagebundle_Stage_titre').val();
                        if (re.test(x)) {

                            $('#bouton').prop('disabled', false);
                            $('#misstitre').hide();
                            $('#Stagebundle_Stage_titre').css('border', "2px  solid #29FF2B");

                        } else {

                            $('#misstitre').show();
                            $('#Stagebundle_Stage_titre').css('border', "2px solid #db4848");


                            $('#bouton').prop('disabled', true);
                        }
                    }
                });


            });
            $('#misscap').hide();
            $('#Stagebundle_Stage_capaciteMax').keyup(function () {


                $.ajax({

                    success: function () {
                        var re = /^[0-9 A-Z]{1,}$/i;
                        var x = $('#Stagebundle_Stage_capaciteMax').val();
                        if (re.test(x)) {

                            $('#bouton').prop('disabled', false);
                            $('#misscap').hide();
                            $('#Stagebundle_Stage_capaciteMax').css('border', "2px  solid #29FF2B");

                        } else {

                            $('#misscap').show();
                            $('#Stagebundle_Stage_capaciteMax').css('border', "2px solid #db4848");


                            $('#bouton').prop('disabled', true);
                        }
                    }
                });


            });

            $('#missdescrip').hide();
            $('#Stagebundle_Stage_description').keyup(function () {


                $.ajax({

                    success: function () {
                        var re = /^[a-z \t à . ? ! ) ( @ # < > : = + , â ê $ * ô é è ù ,A-Z 0-9]{3,}$/i;
                        var x = $('#Stagebundle_Stage_description').val();
                        if (re.test(x)) {

                            $('#bouton').prop('disabled', false);
                            $('#missdescrip').hide();
                            $('#Stagebundle_Stage_description').css('border', "2px  solid #29FF2B");

                        } else {

                            $('#missdescrip').show();
                            $('#Stagebundle_Stage_description').css('border', "2px solid #db4848");


                            $('#bouton').prop('disabled', true);
                        }
                    }
                });


            });
        })

    </script>
{% endblock %}
