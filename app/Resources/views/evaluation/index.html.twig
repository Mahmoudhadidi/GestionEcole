{% extends 'base.html.twig' %}

{% block body %}

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script>
        $(document).ready(function(){
            $("#myInput").on("keyup", function() {
                var value = $(this).val().toLowerCase();
                $("#myTable tr").filter(function() {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });
        });
    </script>
    <center><h1><b><i>Interface de gsetion d'évaluations</i></b> </h1></center>

    <input id="myInput" type="text" name="rechercher" placeholder="rechercher ..."> <br>
    <ul>
        <li>
            <h3>   <a class="btn btn-w-m btn-primary" href="{{ path('eval_new') }}">Ajouter une evaluation</a></h3>

        </li>
        <li>
            <h3> <a class="btn btn-w-m btn-danger" href="{{ path('exportCSV') }}">Exporter CSV</a> </h3>
        </li>
    </ul>
    <br>

    <table class="table table-striped table-bordered table-hover dataTables-example">
        <thead>
            <tr>
                <th>Id</th>
                <th>Id étudiant</th>
                <th>Presence</th>
                <th>Rendement</th>
                <th>Discipline</th>
                <th>Matiere</th>
                <th>Idenseignant</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody id="myTable">
        {% for evaluation in result %}
            <tr>
                <td><a href="{{ path('eval_show', { 'id': evaluation.id }) }}">{{ evaluation.id }}</a></td>
                <td>{{ evaluation.idEtd }}</td>
                <td>{{ evaluation.presence }}</td>
                <td>{{ evaluation.rendement }}</td>
                <td>{{ evaluation.discipline }}</td>
                <td>{{ evaluation.nomMatiere }}</td>
                <td>{{ evaluation.idEnseignant }}</td>
                <td>
                    <ul>
                        <li>
                            <a class="btn btn-w-m btn-info" href="{{ path('eval_show', { 'id': evaluation.id }) }}">Voir</a>
                        </li>
                        <li>
                            <a class="btn btn-w-m btn-default" href="{{ path('eval_edit', { 'id': evaluation.id }) }}">Modifier</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {# display navigation #}
    <div class="navigation text-center">
        <h3>  <b> Preview {{ knp_pagination_render(result) }}  Next</b> </h3>
    </div>



{% endblock %}
