{% extends 'base.html.twig' %}

{% block body %}
    <style>
        label {
            text-align: left;
        }
    </style>
    <br>

    <a href="{{ path('absenceemploye_index')  }}"><i class="fa fa-arrow-circle-o-left"></i> retour</a>
    <br>
    <br>



    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Modifier Absence <small></small></h5>
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>

                        <a class="close-link">
                            <i class="fa fa-times"></i>
                        </a>
                    </div>
                </div>
                <div class="ibox-content">
                    <i class="form-horizontal">
                        {{ form_start(edit_form) }}
                        <div class="form-group"><label class="col-sm-2 control-label">Nom D'utilisateur</label>
                            <div class="col-sm-10">
                                {{ form_widget(edit_form.idEmploye, { 'attr': {'class': 'form-control ' } }) }}
                                {{ form_errors(edit_form.idEmploye) }}


                            </div>
                        </div>
                        <div class="hr-line-dashed"></div>
                        <div class="form-group"><label class="col-sm-2 control-label">Justification</label>

                            <div class="col-sm-10">


                                {{ form_widget(edit_form.typeAbsence, { 'attr': {'class': 'form-control ' } }) }}
                                {{ form_errors(edit_form.typeAbsence) }}

                            </div>
                        </div>
                        <div class="hr-line-dashed"></div>
                        <div class="form-group"><label class="col-sm-2 control-label">Date</label>

                            <div class="col-sm-10">
                                {{ form_widget(edit_form.date, { 'attr': {'class': 'form-control ',  } }) }}
                                {{ form_errors(edit_form.date) }}


                            </div>
                        </div>

                        <div class="hr-line-dashed"></div>
                        <center> <div class="form-group">
                                <div class="col-sm-4 col-sm-offset-2">


                                    <input class="btn btn-primary" type="submit" value="Modifier">



                                </div>
                            </div></center>
                        {{ form_end(edit_form) }}
                        {{ form_start(delete_form) }}
                        <input  type="submit" value="supprimer" class="btn btn-white">
                        {{ form_end(delete_form) }}
                    </i>
                    </i>
                </div>
            </div>
        </div>

    </div>
{% endblock %}