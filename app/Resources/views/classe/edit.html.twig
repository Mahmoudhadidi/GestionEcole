                    </div>
                    <div class="hr-line-dashed"></div>
                    <div class="form-group"><label class="col-sm-2 control-label">specialite</label>

                        <div class="col-sm-10">
                            {{ form_widget(edit_form.specialite, { 'attr': {'class': 'form-control ',  } }) }}
