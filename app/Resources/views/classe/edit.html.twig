{% block body %}

<br>

    <a href="{{ path('classe_index') }}"><i class="fa fa-arrow-circle-o-left"></i> retour</a>
<br>
    <br>



<div class="row">
    <div class="col-lg-12">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h5>Modifier Classe <small></small></h5>
                <div class="ibox-tools">
